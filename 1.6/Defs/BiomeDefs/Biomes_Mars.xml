<Defs>

  <FeatureDef>
    <defName>PlanetFeature</defName>
    <workerClass>MarsX.FeatureWorker_Planet</workerClass>
    <order>10</order>
    <minSize>15</minSize>
    <maxSize>350</maxSize>
